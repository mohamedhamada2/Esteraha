<?xml version="1.0" encoding="utf-8"?>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:id="@+id/relative_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_arrow_back"
                        android:onClick="BACK"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/book_rest"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/background"
                        android:fontFamily="@font/myfontmedium"/>
                    <ImageView
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_menu"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/relative_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_margin="10dp"
                android:background="@drawable/book_item_background">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative_rest_details">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/esteraha2"
                        android:layout_margin="10dp"/>
                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/image"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rest_no"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/rest_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rest_name"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/rest_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="alm3mora"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rest_address"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/rest_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alglaa st"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_reserve_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_rest_details"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/reserve_type"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/client_reserve_type"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        app:backgroundTint="@color/colorPrimary" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_national_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_reserve_type"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/national_num"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>

                    <EditText
                        android:id="@+id/client_national_num"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/txt_book_rest_background"
                        android:drawableEnd="@drawable/ic_search_black"
                        android:imeOptions="actionSearch"
                        android:paddingStart="5dp"
                        android:inputType="number"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_national_num"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/client_name"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/client_name"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_day_num"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/start_date"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <Button
                        android:id="@+id/start_date"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/txt_book_rest_background"
                        android:onClick="GetDateStart"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_day_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/num_of_days"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>

                    <EditText
                        android:id="@+id/num_days"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/txt_book_rest_background"
                        android:onClick="GetDateStart"
                        android:paddingStart="5dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingEnd="5dp"
                        android:fontFamily="@font/myfontlight"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_date_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_date"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/end_date"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <Button
                        android:id="@+id/end_date"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/myfontlight"
                        android:gravity="center"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_client_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_date_out"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/phone"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/client_phone"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_client_phone"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/payment"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_payment"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        app:backgroundTint="@color/colorPrimary"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_total_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_payment_method"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/total"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/total_value"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_paid_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_total_value"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/paid"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/paid_value"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_remain_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_paid_value"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/remain"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/remain_value"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_khasm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_remain_value"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/discount"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/client_discount"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        app:backgroundTint="@color/colorPrimary" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_dicount_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_khasm"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/discount_value"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/client_discount_Value"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:inputType="number"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_tamen_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative_dicount_value"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/tamen"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="16sp"
                        android:fontFamily="@font/myfontlight"/>
                    <EditText
                        android:id="@+id/tamen_Value"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:inputType="number"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:focusable="true"
                        android:fontFamily="@font/myfontlight"
                        android:background="@drawable/txt_book_rest_background" />
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book"
                android:textColor="@color/background"
                android:background="@drawable/btn_login"
                android:layout_below="@+id/relative_all"
                android:layout_margin="20dp"/>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/colorPrimary"
        android:layout_gravity="end"
        app:headerLayout="@layout/navigation_drawer_layout"
        android:background="@color/white">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>


