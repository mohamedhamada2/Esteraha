<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientsManagements.Registeration"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_back"
                android:onClick="BACK"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضافة عميل"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:id="@+id/toolbar_title"
                android:fontFamily="@font/myfontmedium"/>
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/logo_img"
            android:layout_marginTop="50dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/logo2"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/txt_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/client_name"
            android:gravity="center"
            android:layout_below="@+id/logo_img"
            android:fontFamily="@font/myfontmedium"/>
        <EditText
            android:id="@+id/client_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/txt_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:hint="@string/national_num"
            android:gravity="center"
            android:layout_below="@+id/client_name"
            android:fontFamily="@font/myfontmedium"/>
        <EditText
            android:id="@+id/client_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/txt_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:hint="@string/phone"
            android:fontFamily="@font/myfontmedium"
            android:gravity="center"
            android:layout_below="@+id/client_id"/>
        <LinearLayout
            android:id="@+id/client_nationality"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/txt_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:hint="الجنسية"
            android:layout_below="@+id/client_phone"
            android:gravity="center_vertical"
            android:fontFamily="@font/myfontmedium">
            <Spinner
                android:id="@+id/spinner_nationality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorPrimary">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/client_reserved"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/txt_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:hint="الجنسية"
            android:layout_below="@+id/client_nationality"
            android:gravity="center_vertical"
            android:fontFamily="@font/myfontmedium">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/book_before"
                android:fontFamily="@font/myfontmedium"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="10dp"/>
            <Spinner
                android:id="@+id/spinner_reserved"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorPrimary">

            </Spinner>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_login"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/add_client"
            android:fontFamily="@font/myfontmedium"
            android:layout_below="@+id/client_reserved"
            android:textColor="@android:color/white"
            android:onClick="AddClient"/>
    </RelativeLayout>



</ScrollView>