<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
<androidx.cardview.widget.CardView
    android:id="@+id/relative_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp">
    <RelativeLayout
        android:id="@+id/relative_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/reports_background">
        <RelativeLayout
            android:id="@+id/relative_national_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/employee"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>

            <EditText
                android:id="@+id/employee_name"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:paddingStart="5dp"
                android:inputType="number"
                android:paddingEnd="5dp"
                android:fontFamily="@font/myfontlight"
                android:editable="false"
                android:textColor="@color/colorPrimary"
                android:enabled="false"
                android:textSize="14sp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_national_num"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/esal_num"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/esal_num"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/myfontlight"
                android:background="@drawable/txt_book_rest_background"
                android:editable="false"
                android:textColor="@color/colorPrimary"
                android:enabled="false"
                android:textSize="14sp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_rest_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/esal_date"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/esal_date"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:onClick="GetDateStart"
                android:paddingStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:paddingEnd="5dp"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/myfontlight"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_hagz_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_rest_num"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/national_num"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/client_national_num"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:onClick="GetDateStart"
                android:paddingStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:paddingEnd="5dp"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/myfontlight"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_hagz_details"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/total_value"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/total_value"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:onClick="GetDateStart"
                android:paddingStart="5dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/myfontlight"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_esal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_payment_method"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/esal_value"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/esal_value"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:onClick="GetDateStart"
                android:paddingStart="5dp"
                android:gravity="center"
                android:inputType="number"
                android:paddingEnd="5dp"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/myfontlight"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_esal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_esal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/remain"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:fontFamily="@font/myfontlight"/>
            <EditText
                android:id="@+id/remain_value"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/txt_book_rest_background"
                android:onClick="GetDateStart"
                android:paddingStart="5dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/myfontlight"
                android:textSize="14sp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
    </ScrollView>