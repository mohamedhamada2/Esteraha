<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeeManagement.Register_esal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative_register_esal"
            tools:context=".FeeManagement.Register_esal">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/relative_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:onClick="BACK"
                        android:background="@drawable/ic_arrow_back" />

                    <TextView
                        android:id="@+id/txt_reservation_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/myfontbold"
                        android:text="تسجيل ايصال"
                        android:textColor="@color/background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/ic_menu" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/relative_from_date"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/txt_login"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/txt_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/date"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/myfontmedium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:onClick="getdate"/>
                <ImageView
                    android:id="@+id/img_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_expand_more_black_24dp"
                    android:onClick="GetDate"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/et_nationalnum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relative_from_date"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
            <EditText
                android:id="@+id/et_national_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relative_from_date"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:hint="رقم الهوية"/>
            <LinearLayout
                android:id="@+id/linear_hagz_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/et_national_num"
                android:weightSum="10"
                android:background="@drawable/txt_login">
                <EditText
                    android:id="@+id/et_hagz_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontmedium"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="رقم الحجز"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"/>
                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_add_box_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="ADD"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_total_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/linear_hagz_num"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="اجمالي قيمة الحجز"/>
            <EditText
                android:id="@+id/et_paid_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_total_value"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="المدفوع سابقا"/>
            <RelativeLayout
                android:id="@+id/relative_fea"
                android:layout_below="@+id/et_paid_num"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/txt_login"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center" />
            </RelativeLayout>
            <EditText
                android:id="@+id/et_value_esal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relative_fea"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="قيمة الايصال"/>
            <EditText
                android:id="@+id/et_remain_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_value_esal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/myfontmedium"
                android:background="@drawable/txt_login"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="المبلغ المتبقي"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/et_remain_value"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="حفظ"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/myfontmedium"
                    android:background="@drawable/btn_login"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="المبلغ المتبقي"
                    android:onClick="save"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_all_esalat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="جميع الايصالات"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:fontFamily="@font/myfontmedium"
                    android:background="@drawable/txt_login"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="المبلغ المتبقي"
                    android:onClick="all_esalat"
                    android:layout_weight="1" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relative_all_eslat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/relative_date2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/search_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_back"
                    android:onClick="BACK2"/>

                <TextView
                    android:id="@+id/txt_reservation_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/myfontbold"
                    android:text="جميع الايصالات"
                    android:textColor="@color/background"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_menu" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_all_esals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar2"
            android:layout_marginTop="20dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</FrameLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/colorPrimary"
        android:layout_gravity="end"
        app:headerLayout="@layout/navigation_drawer_layout"
        android:background="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>