<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="30dp"
    android:paddingRight="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/reservation_lyt"
                >

                <TextView
                    android:id="@+id/categories_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/reservation_management"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    android:fontFamily="@font/myfontmedium"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_airline" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/clients_lyt"
                >

                <TextView
                    android:id="@+id/myorders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/client_managements"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_person" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/main_lyt"
                >

                <TextView
                    android:id="@+id/main_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/main_setting"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_settings" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/reports_management_lyt"
                >

                <TextView
                    android:id="@+id/add_reports_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/reports"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_report" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/expenses_lyt"
                >

                <TextView
                    android:id="@+id/expenses_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/expenses"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/colorPrimary" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_attach_money" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/fees_lyt"
                >

                <TextView
                    android:id="@+id/add_client_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/fees_and_collection"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_monetization" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:id="@+id/logout_lyt"
                >

                <TextView
                    android:id="@+id/logout_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:text="@string/logout"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/customfontstyle"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/income_background"
                    android:src="@drawable/ic_exit_to_app" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>