<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:id="@+id/relative_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="2dp"
            android:background="@drawable/book_item_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_rest_details">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/esteraha2"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/image"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rest_no"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfontlight"/>
                        <TextView
                            android:id="@+id/txt_esteraha_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfontlight"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rest_name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfontlight"/>
                        <TextView
                            android:id="@+id/txt_esteraha_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alm3mora"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfontlight"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_national_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_rest_details"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/national_num"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>

                <EditText
                    android:id="@+id/client_national_num"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/txt_book_rest_background"
                    android:paddingStart="5dp"
                    android:inputType="number"
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/myfontlight"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:enabled="false"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_national_num"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/client_name"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/client_name"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/myfontlight"
                    android:background="@drawable/txt_book_rest_background"
                    android:editable="false"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:enabled="false"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_day_num"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/myfontlight"
                    android:text="@string/start_date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/start_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/txt_book_rest_background"
                    android:onClick="GetDateStart"
                    android:fontFamily="@font/myfontlight"
                    android:editable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_day_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/num_of_days"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>

                <EditText
                    android:id="@+id/num_days"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/txt_book_rest_background"
                    android:onClick="GetDateStart"
                    android:paddingStart="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingEnd="5dp"
                    android:editable="false"
                    android:enabled="false"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfontlight"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_date_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_date"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/end_date"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <Button
                    android:id="@+id/end_date"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/myfontlight"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_client_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_date_out"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/phone"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/client_phone"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:inputType="number"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/myfontlight"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_total_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_client_phone"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/total_value"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:inputType="number"
                    android:fontFamily="@font/myfontlight"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_paid_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_total_value"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/paid"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/paid_value"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:inputType="number"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfontlight"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_remain_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_paid_value"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/remain"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/remain_value"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:inputType="number"
                    android:editable="false"
                    android:enabled="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/myfontlight"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_dicount_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_remain_value"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/discount_value"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/client_discount_Value"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:inputType="number"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfontlight"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_reservation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_dicount_value"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/reservation_type"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontlight"/>
                <EditText
                    android:id="@+id/client_reservation_type"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:inputType="number"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfontlight"
                    android:background="@drawable/txt_book_rest_background" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2"
                android:layout_below="@+id/relative_reservation_type"
                android:layout_marginTop="10dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp">
                <Button
                    android:id="@+id/btn_update_hagz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    android:background="#319c14"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontmedium"/>
                <Button
                    android:id="@+id/btn_delete_hagz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/myfontmedium"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>

